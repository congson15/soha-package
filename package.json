{
  "name": "soha-package",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/congson15/soha-package.git",
  "author": "Soha",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.0",
    "@types/cheerio": "^0.22.31",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn format",
      "git add ."
    ]
  },
  "dependencies": {
    "@commitlint/config-conventional": "^17.6.6",
    "commitlint": "^17.6.6",
    "nodemon": "^3.0.1"
  }
}
